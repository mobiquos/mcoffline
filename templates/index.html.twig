{% extends 'base.html.twig' %}

{% block page_title %}Bienvenido{% endblock %}

{% block form_content %}
    <div class="container text-center">
        <h1 class="mb-4">Contingencia Multicentro</h1>
        <p class="lead mb-5">Usuario: {{ app.user }}<span class="mx-5"></span>Fecha: {{ "now"|date("d/m/Y") }}.</p>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <a href="{{ path('app_quotes') }}" class="btn btn-primary w-100 py-3 h-100 d-flex flex-column align-items-center justify-content-center">
                        <h5 class="card-title">Preventa</h5>
                        <p class="card-text">Simulador Crédito</p>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <a href="{{ path('app_sales') }}" class="btn btn-primary w-100 py-3 h-100 d-flex flex-column align-items-center justify-content-center">
                        <h5 class="card-title">Caja</h5>
                        <p class="card-text">Autorizador de Crédito</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                <div class="card" style="height: 120px">
                    <div class="card-body">
                        <a href="{{ path('app_payment') }}" class="btn btn-primary w-100 py-3 h-100 d-flex flex-column align-items-center justify-content-center">
                        <h5 class="card-title">Caja</h5>
                        <p class="card-text">Abono/Pago Cuenta</p>
                        </a>
                    </div>
                </div>
            </div>
            {% if is_granted('ROLE_LOCATION_ADMIN') or is_granted('ROLE_ADMIN') %}
            <div class="col-md-6">
                <div class="card" style="height: 120px">
                    <div class="card-body">
                        <a href="{{ path('admin') }}" class="btn btn-primary w-100 py-3 h-100 d-flex flex-column align-items-center justify-content-center">
                        <h5 class="card-title">Administración</h5>
                        </a>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-md-6">
                <div class="card" style="height: 120px">
                    <div class="card-body">
                        <a href="{{ path('app_logout') }}" class="btn btn-warning text-white w-100 py-3 h-100 d-flex flex-column align-items-center justify-content-center">
                        <h5 class="card-title">Salir</h5>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
