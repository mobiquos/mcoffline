{% extends 'tool_base.html.twig' %}

{% block page_title %}Caja: Autorizador de Cr√©dito{% endblock %}

{% block form_content %}
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_sales') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a Caja
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Listado de Simulaciones - {{ "now"|date("d/m/Y") }}</h5>
        </div>
        <div class="card-body">
            {% if quotes is empty %}
                <p class="text-center">No hay simulaciones registradas hoy.</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Fecha y Hora</th>
                                <th>RUT</th>
                                <th>NOMBRE</th>
                                <th>Monto</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for quote in quotes %}
                                <tr>
                                    <td>{{ quote.publicId }}</td>
                                    <td>{{ quote.quoteDate|date('d/m/Y H:i:s') }}</td>
                                    <td>{{ quote.rut }}</td>
                                    <td>{{ quote.clientName|default('Cliente no encontrado') }}</td>
                                    <td>${{ quote.amount|number_format(0, ',', '.') }}</td>
                                    <td>
                                        <a href="{{ path('app_sales_quote_detail', {id: quote.id}) }}" class="btn btn-primary btn-sm">
                                            <i class="bi bi-search"></i>
                                        </a>
                                        <a href="{{ path('app_sales', {quoteId: quote.id}) }}" class="btn btn-success btn-sm">
                                            <i class="bi bi-check-circle"></i> Seleccionar
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
